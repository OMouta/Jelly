{
  "name": "@omouta/jelly",
  "version": "0.3.1",
  "description": "A modern package manager for Roblox, built on top of Wally",
  "author": "OMouta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OMouta/jelly.git"
  },
  "homepage": "https://github.com/OMouta/jelly#readme",
  "bugs": {
    "url": "https://github.com/OMouta/jelly/issues"
  },
  "bin": {
    "jelly-dev": "./dist/src/bin/jelly.js",
    "jd": "./dist/src/bin/jelly.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node ./dist/bin/jelly.js",
    "test": "jest",
    "prepare": "npm run build",
    "build:binaries": "npm run build && pkg . --out-path binaries",
    "build:linux": "npm run build && pkg . --targets node20-linux-x64 --out-path binaries",
    "build:windows": "npm run build && pkg . --targets node20-win-x64 --out-path binaries",
    "build:mac": "npm run build && pkg . --targets node20-macos-x64 --out-path binaries"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "roblox",
    "package-manager",
    "wally",
    "rojo",
    "cli"
  ],
  "pkg": {
    "targets": [
      "node20-linux-x64",
      "node20-win-x64",
      "node20-macos-x64"
    ],
    "outputPath": "binaries",
    "assets": [
      "node_modules/figlet/fonts/Standard.flf"
    ]
  },
  "dependencies": {
    "@types/archiver": "^6.0.3",
    "@types/figlet": "^1.7.0",
    "@types/semver": "^7.7.0",
    "adm-zip": "^0.5.10",
    "archiver": "^7.0.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "figlet": "^1.8.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "minimatch": "^10.0.3",
    "ora": "^5.4.1",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
