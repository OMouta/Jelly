{
  "name": "@omouta/jelly",
  "version": "0.2.1",
  "description": "A modern package manager for Roblox, built on top of Wally",
  "author": "OMouta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OMouta/jelly.git"
  },
  "homepage": "https://github.com/OMouta/jelly#readme",
  "bugs": {
    "url": "https://github.com/OMouta/jelly/issues"
  },
  "bin": {
    "jelly": "./dist/src/bin/jelly.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node ./dist/bin/jelly.js",
    "test": "jest",
    "prepare": "npm run build",
    "build:binaries": "npm run build && pkg . --out-path binaries",
    "build:linux": "npm run build && pkg . --targets node18-linux-x64 --out-path binaries",
    "build:windows": "npm run build && pkg . --targets node18-win-x64 --out-path binaries",
    "build:mac": "npm run build && pkg . --targets node18-macos-x64 --out-path binaries",
    "bun:build": "bun build --compile --minify --sourcemap --bytecode ./src/bin/jelly.ts --outfile jelly",
    "bun:build:linux": "bun build --compile --minify --sourcemap --bytecode --target=bun-linux-x64 ./src/bin/jelly.ts --outfile jelly-linux",
    "bun:build:windows": "bun build --compile --minify --sourcemap --bytecode --target=bun-windows-x64 ./src/bin/jelly.ts --outfile jelly.exe",
    "bun:build:mac": "bun build --compile --minify --sourcemap --bytecode --target=bun-darwin-x64 ./src/bin/jelly.ts --outfile jelly-macos"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "roblox",
    "package-manager",
    "wally",
    "rojo",
    "cli"
  ],
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
      "node18-macos-x64"
    ],
    "outputPath": "binaries",
    "assets": [
      "node_modules/figlet/fonts/Standard.flf"
    ]
  },
  "dependencies": {
    "@types/figlet": "^1.7.0",
    "adm-zip": "^0.5.10",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "figlet": "^1.8.1",
    "fs-extra": "^11.2.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/bun": "^1.2.18",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
